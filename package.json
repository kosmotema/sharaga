{
  "name": "sharaga",
  "version": "3.0.0-beta4",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "sass:build": "sass style/:public/style/ --style compressed --no-source-map --update",
    "sass:watch": "sass style/:public/style/ --watch",
    "ts:build": "tsc --build --verbose",
    "ts:watch": "ts-node-dev --respawn --inspect --transpile-only ./src/app.ts",
    "build": "run-p ts:build sass:build",
    "pm2:start": "pm2 start pm2.config.json",
    "pm2:restart": "pm2 restart sharaga --update-env",
    "pm2:stop": "pm2 stop sharaga",
    "pm2:wipe": "pm2 delete sharaga",
    "pm2:save": "pm2 save",
    "prod": "run-s build pm2:start pm2:save",
    "prod:restart": "run-s build pm2:restart pm2:save",
    "dev": "run-p sass:watch ts:watch",
    "svgo": "svgo -f public/icons/",
    "check:format": "prettier . --check",
    "check:lint": "eslint .",
    "format": "prettier . --write",
    "lint:es": "eslint . --fix",
    "lint:style": "stylelint ./style --fix"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "domhandler": "^4.3.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.25.3",
    "fastify-static": "^4.5.0",
    "handlebars": "^4.7.7",
    "html-minifier": "^4.0.0",
    "http-errors": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.2",
    "point-of-view": "^5.0.0",
    "sass": "^1.45.2",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.2",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^17.0.7",
    "@types/node-sass": "^4.11.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-unicorn": "^40.0.0",
    "prettier": "2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^24.0.0",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.9",
    "ts-node-dev": "^1.1.8"
  }
}
