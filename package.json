{
  "name": "sharaga",
  "version": "3.0.0-beta4",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "sass:build": "sass style/:public/style/ --style compressed --no-source-map --update",
    "sass:watch": "sass style/:public/style/ --watch",
    "ts:build": "tsc --build --verbose",
    "ts:watch": "ts-node-dev --respawn --inspect --transpile-only ./src/app.ts",
    "build": "run-p ts:build sass:build",
    "pm2:start": "pm2 start pm2.config.json",
    "pm2:restart": "pm2 restart sharaga --update-env",
    "pm2:stop": "pm2 stop sharaga",
    "pm2:wipe": "pm2 delete sharaga",
    "pm2:save": "pm2 save",
    "prod": "run-s build pm2:start pm2:save",
    "prod:restart": "run-s build pm2:restart pm2:save",
    "dev": "run-p sass:watch ts:watch",
    "svgo": "svgo -f public/icons/",
    "check:format": "prettier . --check",
    "check:lint": "eslint .",
    "format": "prettier . --write",
    "lint:es": "eslint . --fix",
    "lint:style": "stylelint ./style --fix"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "domhandler": "^4.2.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.22.0",
    "fastify-static": "^4.2.3",
    "handlebars": "^4.7.7",
    "html-minifier": "^4.0.0",
    "http-errors": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.1",
    "point-of-view": "^4.15.1",
    "sass": "^1.42.1",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.1",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.10.1",
    "@types/node-sass": "^4.11.2",
    "@types/stylelint": "^13",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-regexp": "^1.3.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "prettier": "2.4.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "svgo": "^2.7.0",
    "ts-node-dev": "^1.1.8"
  }
}
