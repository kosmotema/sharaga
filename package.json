{
  "name": "sharaga",
  "version": "3.0.0-beta2",
  "private": true,
  "scripts": {
    "sass:build": "sass style/:public/style/ --style compressed --no-source-map --update",
    "sass:watch": "sass style/:public/style/ --watch",
    "ts:build": "tsc --build --verbose",
    "ts:watch": "ts-node-dev --respawn --inspect --transpile-only ./app.ts",
    "build": "run-p ts:build sass:build",
    "start": "pm2 start ecosystem.config.js",
    "restart": "pm2 restart sharaga --update-env",
    "prod": "run-s build start",
    "prod:restart": "run-s build restart",
    "dev": "run-p sass:watch ts:watch",
    "svgo": "svgo -f public/icons/",
    "format": "yarn prettier --write ."
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "domhandler": "^4.2.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.20.1",
    "fastify-static": "^4.2.3",
    "handlebars": "^4.7.7",
    "html-minifier": "^4.0.0",
    "http-errors": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.0",
    "point-of-view": "^4.15.1",
    "sass": "^1.37.5",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.1",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.6.0",
    "@types/node-sass": "^4.11.2",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.24.0",
    "prettier": "2.3.2",
    "svgo": "^2.3.1",
    "ts-node-dev": "^1.1.8"
  }
}
