{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via Yarn",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"],
            "protocol": "inspector",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "neverOpen",
            "restart": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "restart": true
        }
    ]
}
